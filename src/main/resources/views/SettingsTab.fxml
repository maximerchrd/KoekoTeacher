<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="548.0" prefWidth="855.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="koeko.controllers.SettingsController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="29.0" prefWidth="381.0" text="Select Language:" />
                  <ComboBox fx:id="appLanguageCombobox" onAction="#changeAppLanguage" prefWidth="150.0" promptText="Language" />
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="29.0" prefWidth="381.0" text="Give a feedback to students when they answer the question:" />
                  <ToggleButton fx:id="correctionModeButton" mnemonicParsing="false" onAction="#correctionModeChanged" text="ToggleButton">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ToggleButton>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="29.0" prefWidth="381.0" text="Force synchronization with students:" />
                  <ToggleButton fx:id="forceSyncButton" mnemonicParsing="false" onAction="#forceSyncChanged" text="ToggleButton">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </ToggleButton>
               </children>
            </HBox>
            <Label text="WEB SYNCHRONIZATION">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Label>
            <HBox prefHeight="50.0" prefWidth="855.0">
               <children>
                  <Label prefWidth="160.0" text="User Name:" />
                  <TextField fx:id="teacherName" onAction="#setUserName" prefWidth="170.0">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="160.0" text="Language:" />
                  <ComboBox fx:id="languageCombobox" onAction="#setLanguage" prefWidth="170.0" promptText="Select Language">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Label prefWidth="160.0" text="Synchronization key: " />
                  <TextField fx:id="synchronizationKeyTextField" prefWidth="170.0">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin></TextField>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#syncWithServer" text="Synchronize with Web Server" />
                  <Button mnemonicParsing="false" onAction="#resetAndSync" text="Reset and Synchronize with Web Server">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Button mnemonicParsing="false" onAction="#requestHomeworkKey" text="Request New Homework Key" />
         </children></VBox>
   </children>
</AnchorPane>
